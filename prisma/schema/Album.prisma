model Album {
  id            String   @id @default(cuid())
  title         String
  releaseDate   DateTime
  link          String // 🎧 바로 듣기 링크
  coverImageUrl String?

  aespaInfo   AespaInfo? @relation(fields: [aespaInfoId], references: [id])
  aespaInfoId String?

  member   AespaMember? @relation(fields: [memberId], references: [id])
  memberId String?

  createdAt DateTime @default(now())
}
